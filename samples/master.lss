--accent = rgba(0,90,200);
--white = rgba(255,255,255);

class btn [
    padding: 10px;
    font-size: 1em;
    
    screen-width < 500{
    	padding: 3px;
    }
];

class accentBtn < btn [
	--radius = 6px;

    background-color : --accent;
    color: --white;
    
    .rounded[
    	border-radius: --radius;
    ]
];


